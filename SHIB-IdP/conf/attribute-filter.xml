<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    MOD
    Included policy to release all mandatory attributes to EidasNode
-->
<AttributeFilterPolicyGroup id="ShibbolethFilterPolicy"
        xmlns="urn:mace:shibboleth:2.0:afp"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:mace:shibboleth:2.0:afp http://shibboleth.net/schema/idp/shibboleth-afp.xsd">

    <!-- Release some attributes to an SP. -->
    <AttributeFilterPolicy id="http://192.168.89.133">
        <PolicyRequirementRule xsi:type="Requester" value="http://192.168.89.133" />

        <AttributeRule attributeID="uid">
            <PermitValueRule xsi:type="ANY" />
        </AttributeRule>
    </AttributeFilterPolicy>

    <AttributeFilterPolicy id="http://192.168.89.134:8080/EidasNode/ServiceRequesterMetadata">
        <PolicyRequirementRule xsi:type="Requester" value="http://192.168.89.134:8080/EidasNode/ServiceRequesterMetadata" />

        <AttributeRule attributeID="PersonIdentifier">
            <PermitValueRule xsi:type="ANY" />
        </AttributeRule>

        <AttributeRule attributeID="CurrentFamilyName">
            <PermitValueRule xsi:type="ANY" />
        </AttributeRule>

        <AttributeRule attributeID="CurrentGivenName">
            <PermitValueRule xsi:type="ANY" />
        </AttributeRule>

        <AttributeRule attributeID="DateOfBirth">
            <PermitValueRule xsi:type="ANY" />
        </AttributeRule>
    </AttributeFilterPolicy>

</AttributeFilterPolicyGroup>
