<flow xmlns="http://www.springframework.org/schema/webflow"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd"
       parent="intercept.abstract">

	<!-- MOD -->
	<!-- Qui viene descritto il flusso che l'interceptor deve seguire -->
	
    <!-- Rudimentary impediment to direct execution of subflow. -->
    <input name="calledAsSubflow" type="boolean" required="true" />
    
    
    <action-state id="AttributesFiltering">
        <evaluate expression="EidasAttributesManager.apply(opensamlProfileRequestContext)" />
        <transition to="proceed" />
    </action-state>

    <end-state id="proceed" />

	<!-- Importazione del resto della configurazione -->
    <bean-import resource="./expiring-password-beans.xml" />

</flow>